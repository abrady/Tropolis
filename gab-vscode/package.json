{
  "name": "gab-language",
  "publisher": "tropolis",
  "displayName": "GAB Language Support",
  "description": "Syntax highlighting and diagnostics for .gab files",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/abrady/tropolis"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:gab"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gab",
        "extensions": [
          ".gab"
        ],
        "aliases": [
          "Gab"
        ]
      }
    ],
    "grammars": [
      {
        "language": "gab",
        "scopeName": "source.gab",
        "path": "./syntaxes/gab.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
